{
  "name": "@atomic-ehr/fhirpath",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build:grammar": "antlr4ng -Dlanguage=TypeScript -visitor -listener fhirpath.g4 -o src/generated",
    "build": "bun run build:grammar && bun build src/index.ts --outdir=dist --target=node",
    "test": "bun test",
    "dev": "bun --hot src/index.ts"
  },
  "dependencies": {
    "antlr4ng": "^3.0.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "antlr4ng-cli": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
